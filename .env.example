# ============================================
# WEB PANELİ (Netlify)
# ============================================

# Neon.tech PostgreSQL Database URL
DATABASE_URL=postgresql://user:password@ep-xxx.region.neon.tech/dbname?sslmode=require

# JWT Secret - Güvenli rastgele bir string (min 32 karakter)
JWT_SECRET=your_super_secret_jwt_key_min_32_chars

# ============================================
# TELEGRAM BOTU (Heroku)
# ============================================

# Telegram API Bilgileri (my.telegram.org'dan alın)
# Telethon için - SADECE DİNLEME amaçlı kullanılır
API_ID=your_api_id
API_HASH=your_api_hash

# Telegram Session String (telethon ile oluşturun)
# StringSession oluşturmak için: python generate_session.py
# Bu hesap sadece dinleme kanallarını takip eder
SESSION_STRING=your_session_string

# ============================================
# TELEGRAM BOT TOKEN (Kod Gönderimi İçin)
# ============================================
# @BotFather'dan alın: https://t.me/BotFather
# Bu bot kodları hedef kanallara gönderir
# ÖNEMLİ: Bot'u hedef kanallara ADMIN olarak ekleyin!
BOT_TOKEN=your_bot_token_from_botfather
